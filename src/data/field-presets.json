{
  "domain": {
    "id": "domain",
    "label": "Domain",
    "key": "domain",
    "type": "string",
    "required": true,
    "pattern": "^(?:[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?\.)+[a-z]{2,63}$",
    "description": "Domain name (e.g., example.com)",
    "defaultValue": "",
    "minLength": 3,
    "maxLength": 253,
    "helpText": "Enter a valid domain name",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "FQDN validation"
  },
  "email": {
    "id": "email",
    "label": "Admin Email",
    "key": "admin_email",
    "type": "string",
    "required": true,
    "format": "email",
    "description": "Email address",
    "defaultValue": "",
    "minLength": 5,
    "maxLength": 254,
    "helpText": "Enter a valid email address",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Email format validation"
  },
  "db_username": {
    "id": "db_username",
    "label": "Database Username",
    "key": "db_user",
    "type": "string",
    "required": true,
    "pattern": "^[a-zA-Z0-9_]{3,32}$",
    "description": "Database username (3-32 chars, alphanumeric + underscore)",
    "defaultValue": "",
    "minLength": 3,
    "maxLength": 32,
    "helpText": "Alphanumeric characters and underscores only",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Alphanumeric with underscore validation"
  },
  "db_name": {
    "id": "db_name",
    "label": "Database Name",
    "key": "db_name",
    "type": "string",
    "required": true,
    "pattern": "^[a-zA-Z0-9_]{3,32}$",
    "description": "Database name (3-32 chars, alphanumeric + underscore)",
    "defaultValue": "",
    "minLength": 3,
    "maxLength": 32,
    "helpText": "Alphanumeric characters and underscores only",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Alphanumeric with underscore validation"
  },
  "password": {
    "id": "password",
    "label": "Password",
    "key": "password",
    "type": "string",
    "required": true,
    "description": "Password (8-64 characters)",
    "defaultValue": "",
    "minLength": 8,
    "maxLength": 64,
    "helpText": "Strong password with minimum 8 characters",
    "masked": true,
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Password strength validation"
  },
  "path": {
    "id": "path",
    "label": "File Path",
    "key": "file_path",
    "type": "string",
    "required": true,
    "pattern": "^/([a-zA-Z0-9/_\\.-]+)$",
    "description": "Unix file path",
    "defaultValue": "/",
    "minLength": 1,
    "maxLength": 4096,
    "helpText": "Unix-style file path starting with /",
    "allowOverrideAtRuntime": false,
    "serverValidationHint": "Unix path validation"
  },
  "port": {
    "id": "port",
    "label": "Port",
    "key": "port",
    "type": "integer",
    "required": false,
    "minimum": 1,
    "maximum": 65535,
    "description": "Network port (1-65535)",
    "defaultValue": 80,
    "helpText": "Valid network port number",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Port range validation"
  },
  "integer": {
    "id": "integer",
    "label": "Integer",
    "key": "value",
    "type": "integer",
    "required": false,
    "description": "Whole number",
    "defaultValue": 0,
    "minimum": -2147483648,
    "maximum": 2147483647,
    "helpText": "Enter a whole number",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Integer validation"
  },
  "boolean": {
    "id": "boolean",
