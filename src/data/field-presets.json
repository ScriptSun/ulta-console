    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Boolean validation"
  },
  "select": {
    "id": "select",
    "label": "Option",
    "key": "option",
    "type": "string",
    "required": false,
    "enum": ["option1", "option2", "option3"],
    "description": "Select from predefined options",
    "defaultValue": "option1",
    "helpText": "Choose one of the available options",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Enum validation"
  },
  "text": {
    "id": "text",
    "label": "Text",
    "key": "text",
