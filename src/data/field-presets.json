    "description": "Multi-line text input",
    "defaultValue": "",
    "minLength": 0,
    "maxLength": 2000,
    "helpText": "Multi-line text input for longer content",
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Text validation"
  },
  "secret": {
    "id": "secret",
    "label": "Secret",
    "key": "secret",
    "type": "string",
    "required": true,
    "description": "Secret value from vault",
    "defaultValue": "",
    "minLength": 1,
    "maxLength": 512,
    "helpText": "Sensitive information that will be masked",
    "secret": true,
    "masked": true,
    "allowOverrideAtRuntime": true,
    "serverValidationHint": "Secret validation"
  }
